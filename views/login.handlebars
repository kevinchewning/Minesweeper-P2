<div class="flex-column">
    <h2>Please log in to start playing Minesweeper!</h2>
    <form class="pure-form pure-form-aligned login-form">
        <fieldset>
            <div class="pure-control-group">
                <label for="aligned-email">Email</label>
                <input id="email-login"  type="email" name="aligned-email" placeholder="Email Address" required="" />
            </div>
            <div class="pure-control-group">
                <label for="aligned-password">Password</label>
                <input id= "password-login" type="password" name="aligned-password" placeholder="Password" required="" />
            </div>
            <div class="pure-controls">
                <button type="submit" class="pure-button pure-button-primary">Login</button>
            </div>
        </fieldset>
    </form>
    <h4>If you do not have an account yet, please signup<a href='./signup'>HERE</h4>
</div>

<script src="/js/login.js"></script>