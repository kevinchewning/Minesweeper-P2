<h2 class= "lb-title">LEADERBOARDS</h2>
<br>
<br>
{{!-- Stats --}}
{{#if logged_in}}
{{#if stats.totalGames}}
<div>
    <h4>{{user.username}} Game Stats</h4>
    <ul>
        <li>{{stats.wins}}</li>
        <li>{{stats.losses}}</li>
        <li>{{stats.avgScore}}</li>
        <li>{{stats.bestScore}}</li>
        <li>{{stats.worstScore}}</li>
        <li>{{stats.immediateLosses}}</li>
    </ul>
</div>
{{else}}
<h4 class="nogame">User {{user.username}} hasn't played any games!</h4>
{{/if}}
{{/if}}

{{!-- Leaderboard --}}
<h4 class="tabletitle">Global Leaderboard</h4>
<div class= "pure-g">
    {{#each leaders}}
    <div class="pure-g">
        <div class="pure-g-1-3"><p class= "lbtable">Username:   {{user.username}}</p></div>
        <div class="pure-g-1-3"><p class= "lbtable">Score:   {{score}}</p></div>
        <div class="pure-g-1-3"><p class= "lbtable">Date:   {{format_date created_at}}</p></div>
    </div>
    {{/each}}
</div>  





